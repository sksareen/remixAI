{
  "manifest_version": 3,
  "name": "AI Content Remixer",
  "version": "1.3",
  "description": "Capture screenshots or page content and send to AI for remixing",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*", "https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icon128.png"
  },
  "action": {}
}